<div class="container">
  <h1 class="text-center mt-5">All Bookings</h1>
  
  <ul class="list-group mt-4">
    <% if @booking.any? %>
      <% @booking.each do |booking| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to booking.booking_code, booking, class: "text-dark" %>
          <span class="badge badge-primary badge-pill">View Details</span>
        </li>
      <% end %>
    <% else %>
      <h4 class="list-group-item text-center">No Booking Yet </h4>
    <% end %>
  </ul>
  
</div>
