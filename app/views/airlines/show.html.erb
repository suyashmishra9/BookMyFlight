<div class="m-3">
  <h1>Airline Name: <%= @airline.name %></h1>
  <h2>Airline Code: <%= @airline.code %></h2>
</div>

<div class="m-3 d-inline">
  <% if user_signed_in? && can?(:update, @airline)%>
    <%= link_to edit_airline_path(@airline) do %>
      <button type="button" class="btn btn-info">Edit Airline</button>
    <% end %> 
  <% else %>
    
  <% end %>
</div>

<div class="m-3 d-inline">
  <% if user_signed_in? && can?(:create, @flight)%>
    <%= link_to new_airline_flight_path(@airline) do %>
      <button type="button" class="btn btn-info">Add Flight</button>
    <% end %> 
  <% else %>
    
  <% end %>
</div>


<div class="m-3 d-inline">
  <% if user_signed_in? && can?(:destroy, @airline) %>
    <%= link_to airline_path(@airline), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
      <button type="button" class="btn btn-danger">Destroy Airline</button>
    <% end %> 
  <% else %>
    
  <% end %>
</div>

<%= link_to "All bookings", bookings_path, class: "btn btn-primary" %>

<ul>
  <%= render template: "flights/index" %>

  <div class="m-3">
    <%= link_to new_airline_flight_path(@airline) do %> 
      <button type="button" class="btn btn-primary">New Flight</button>
    <% end %> 
  </div>
</ul>
